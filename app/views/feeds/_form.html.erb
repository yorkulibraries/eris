<%= simple_form_for @feed, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    
	<%= f.input :name, :input_html => { :class => "span6" } %>
	<%= f.input :show_title, :label => "Display Title?"%>
	
	<%= f.input :description, :input_html => { :class => "span6"}, :label => "HTML Block"%>
	
	<%= f.input :url, :input_html => { :class => "span6" }, :label => "RSS Feed Url" %>


	<div class="control-group">
		<%= f.input :cache_frequency, :collection => [0, 15, 30, 45, 60, 90, 120, 150, 180, 360], :include_blank => false, :hint => "Cache time in minutes"%>
	</div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', feeds_path, :class => 'btn' %>

	  <%= link_to 'Destroy', feed_path(@feed), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger float-right' unless @feed.new_record?%>
    </div>

  </fieldset>
<% end %>
